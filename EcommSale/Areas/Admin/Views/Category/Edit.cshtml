@using EcommSale.Models;
@model Category
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-black">Edit Category</h2>

@if (!string.IsNullOrEmpty(ViewBag.ExistErrorCate))
{
    <div class="alert alert-danger">@ViewBag.ExistErrorCate</div>
}

<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="CategoryID"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-5">
                <input asp-for="CategoryName" class="form-control" />
            </div>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input type="submit" class="btn btn-green" value="Update" />
            <a asp-action="Index" class="btn btn-red">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
