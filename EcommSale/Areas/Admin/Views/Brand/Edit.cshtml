@using EcommSale.Models;
@model Brand
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit Brand</h2>

@if (!string.IsNullOrEmpty(ViewBag.ExistErrorBrand))
{
    <div class="alert alert-danger">@ViewBag.ExistErrorBrand</div>
}

<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="BrandID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="BrandName"></label>
            </div>
            <div class="col-5">
                <input asp-for="BrandName" class="form-control" />
            </div>
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <input type="submit" class="btn btn-green" value="Update" />
            <a asp-action="Index" class="btn btn-red">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
