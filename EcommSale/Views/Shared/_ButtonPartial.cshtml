@model int
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string controllerName = ViewData["ControllerName"] as string;
}
<td style="width: 100px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="@controllerName" class="btn yellow-shop" asp-route-id="@Model"><i class="fa-regular fa-pen-to-square"></i></a>
        <a asp-action="Delete" asp-controller="@controllerName" class="btn red-shop" asp-route-id="@Model"><i class="fa-solid fa-trash"></i></a>
    </div>
</td>
